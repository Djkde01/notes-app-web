<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/signup" method="POST">
                    <div class="mb-4">
                        <input type="text" class="form-control" name="name" placeholder="Your name" value="{{name}}" autofocus />
                    </div>
                    <div class="mb-4">
                        <input type="email" class="form-control" name="email" placeholder="Your email" value="{{email}}"/>
                    </div>
                    <div class="mb-4">
                        <input type="password" class="form-control" name="password" placeholder="Create a password" value="{{password}}"/>
                    </div>
                    <div class="mb-4">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirm your password" value="{{confirm_password}}"/>
                    </div>
                    <div class="d-grid gap-2 mb-4">
                        <button class="btn btn-primary" type="submit">Create account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>